<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <RollingFile  name="file" fileName="${sys:user.home}/.tinyTank/logs/latest.log" filePattern="${sys:user.home}/.tinyTank/logs/%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>[%d{HH:mm:ss.SSS}] [%l] [%t/%level]: %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <OnStartupTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${sys:user.home}/.tinyTank/logs" maxDepth="2">
                    <IfFileName glob="*.log" />
                    <IfAccumulatedFileCount exceeds="3" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile >
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern="%highlight{[%d{HH:mm:ss.SSS}] [%l] [%t/%level]: %msg%n}{FATAL=red Bright, ERROR=red, WARN=yellow Bright, INFO=White Bold, DEBUG=green bold, TRACE=blue}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="file"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>